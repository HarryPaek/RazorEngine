@using Common.Data.Models
@model Common.Data.ViewModels.LinkedUserListViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>Welcome</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 14px;
            line-height: 1.42857143;
            color: #333;
            background-color: #fff;
        }
        .contenttitle {
            background-color: #dff0d8;
        }
        .container { padding-top: 10px; }
    </style>
</head>
<body class="container">
    <div class="container">
        <div class="contenttitle">
            <img src="$CONTENTID$" width="180" />
        </div>
        <br />
        <p>Hi @Model.Receiver.Name, </p>
        <p>Thanks for signing up to <a href="http://awesomesite.com">our awesome site</a>!</p>

        @if (!Model.Receiver.IsPremiumUser) {
            <p>To make the most of it, <a href="http://awesomesite.com/upgrade">upgrade to our premium package now</a>!</p>
        }
        
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>다음 항목에 대한 결재가 요청 되었습니다.</strong><br />
                <strong>각 담당자는 일정에 맞춰 업무를 수행하시기 바랍니다.</strong>
            </div>
            <table class="table table-striped table-bordered">
                <tr><th>Name</th><th>E-Mail</th><th>Primium User</th><th>Related Users</th></tr>
                @foreach (LinkedUserModel user in Model.RelatedUsers)
                {
                    <tr><td>@user.Name</td><td>@user.Email</td><td>@user.GetIsPremiumUserText()</td><td>@user.GetLinkedUsersAsText()</td></tr>
                }
            </table>
        </div>

        <br />
        <p>@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.ffff")</p>
        <p>John, Founder</p>
    </div>
</body>
</html>
